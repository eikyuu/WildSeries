{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1>All TV shows from "{{ category.name }}" category: </h1>
    {% for program in programs %}
        <div>
        <a href="{{ path('wild_show', {'slug': program.slug }) }}">{{ loop.index }} / {{ program.title }}</a>
            <p>{{ program.synopsis }}</p>
        </div>
    {% endfor %}
</div>        
{% endblock %}

            